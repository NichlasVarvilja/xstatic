{
  "private": true,
  "version": "1.0.1",
  "name": "@xstatic/tests",
  "description": "xstatic tests",
  "dependencies": {
    "@xstatic/core": "file:packages/core",
    "@xstatic/atom": "file:packages/plugin-atom",
    "@xstatic/babel": "file:packages/plugin-babel",
    "@xstatic/css": "file:packages/plugin-css",
    "@xstatic/epub": "file:packages/plugin-epub",
    "@xstatic/filter": "file:packages/plugin-filter",
    "@xstatic/frontmatter": "file:packages/plugin-frontmatter",
    "@xstatic/handlebars": "file:packages/plugin-handlebars",
    "@xstatic/json": "file:packages/plugin-json",
    "@xstatic/less": "file:packages/plugin-less",
    "@xstatic/markdown": "file:packages/plugin-markdown",
    "@xstatic/merge": "file:packages/plugin-merge",
    "@xstatic/nunjucks": "file:packages/plugin-nunjucks",
    "@xstatic/sass": "file:packages/plugin-sass",
    "@xstatic/sitemap": "file:packages/plugin-sitemap"
  },
  "devDependencies": {
    "tape": "^4.4.0",
    "blue-tape": "^0.1.11",
    "libxmljs": "^0.17.1",
    "istanbul": "^0.4.2",
    "nyc": "^5.5.0",
    "faucet": "^0.0.1",
    "coveralls": "^2.11.6",
    "codecov.io": "^0.1.6",
    "codacy-coverage": "^1.1.3"
  },
  "scripts": {
    "test": "istanbul test tape -- tests/*.js | faucet",
    "coverage": "npm_config_coverage=1 npm test && nyc report --reporter=text-lcov | cat",
    "coverage-upload": "npm run coverage-upload-coveralls && npm run coverage-upload-codecov && npm run coverage-upload-codacy",
    "coverage-upload-coveralls": "test -f ./coverage/lcov.info && cat ./coverage/lcov.info | coveralls",
    "coverage-upload-codecov": "test -f ./coverage/lcov.info && cat ./coverage/lcov.info | codecov",
    "coverage-upload-codacy": "test -f ./coverage/lcov.info && cat ./coverage/lcov.info | codacy-coverage"
  }
}
