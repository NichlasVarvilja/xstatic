{
  "version": "1.2.0",
  "author": "Torsten Curdt",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/tcurdt/xstatic.git"
  },
  "engines": {
    "node": ">= 4.2.0"
  },
  "devDependencies": {
    "tape": "4.5.1",
    "blue-tape": "0.2.0",
    "istanbul": "0.4.2",
    "nyc": "6.0.0",
    "faucet": "0.0.1",
    "libxmljs": "0.17.0",
    "coveralls": "2.11.8",
    "codecov.io": "0.1.6",
    "codacy-coverage": "1.1.3"
  },
  "private": true,
  "name": "xstatic-tests",
  "dependencies": {
    "xstatic-core": "file:core",
    "xstatic-atom": "file:plugins/atom",
    "xstatic-babel": "file:plugins/babel",
    "xstatic-css": "file:plugins/css",
    "xstatic-epub": "file:plugins/epub",
    "xstatic-filter": "file:plugins/filter",
    "xstatic-frontmatter": "file:plugins/frontmatter",
    "xstatic-handlebars": "file:plugins/handlebars",
    "xstatic-json": "file:plugins/json",
    "xstatic-less": "file:plugins/less",
    "xstatic-markdown": "file:plugins/markdown",
    "xstatic-merge": "file:plugins/merge",
    "xstatic-nunjucks": "file:plugins/nunjucks",
    "xstatic-sass": "file:plugins/sass",
    "xstatic-sitemap": "file:plugins/sitemap",
    "xstatic-sort": "file:plugins/sort"
  },
  "scripts": {
    "preinstall" : "./dependencies.sh",
    "test": "istanbul test tape -- tests/*.js core/tests/*.js plugins/*/tests/*.js | faucet",
    "coverage": "nyc --reporter=lcov --reporter=text npm test | cat",
    "coverage-upload": "npm run coverage-upload-coveralls && npm run coverage-upload-codecov && npm run coverage-upload-codacy",
    "coverage-upload-coveralls": "test -f ./coverage/lcov.info && cat ./coverage/lcov.info | coveralls",
    "coverage-upload-codecov": "test -f ./coverage/lcov.info && cat ./coverage/lcov.info | codecov",
    "coverage-upload-codacy": "test -f ./coverage/lcov.info && cat ./coverage/lcov.info | codacy-coverage"
  }
}
